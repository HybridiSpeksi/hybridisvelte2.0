generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Person {
  id    String @id @default(cuid())
  title String
  name  String
  group Group
  order Int    @default(0)
}

enum Group {
  HALLITUS
  TOIMIHENKILOT
  YHDENVERTAISET
  TUOTANTOTIIMI
}

enum Role {
  ADMIN
  EDITOR
  NOOB
}

model User {
  id               String         @id @unique @default(cuid())
  provider_id      String         @unique
  hashed_password  String?
  username         String         @unique
  session          Session[]

  @@map("user")
}

model Session {
    id              String @id @unique
    user_id         String 
    expires         BigInt
    idle_expires    BigInt
    user            User @relation(references: [id], fields: [user_id], onDelete: Cascade)

    @@index([user_id])
    @@map("session")
}   

model Content {
  id        Int @id @unique @default(autoincrement())
  label     String
  content   String
}

